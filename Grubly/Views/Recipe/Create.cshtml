@{
ViewData["Title"] = "Recipes";
}

<section class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Recipe</h2>

    @using (Html.BeginForm("Create", "Recipe", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-red-500" })

        <!-- Recipe Title -->
        <div class="mb-4">
            @Html.LabelFor(model => model.Title, "Recipe Title", new { @class = "block text-sm font-medium text-gray-700" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-red-500 text-sm" })
        </div>

        <!-- Ingredients Section -->
        <div class="mb-4">
            @Html.Label("Ingredients", new { @class = "block text-sm font-medium text-gray-700" })
            <div class="space-y-2">
                <div class="flex items-center space-x-2">
                    @Html.TextBox("ingredient[]", null, new { @class = "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200", placeholder = "Enter ingredient" })
                    <button type="button" class="bg-gray-100 p-2 text-sm font-medium text-gray-700 rounded-md shadow-sm hover:bg-gray-200">Remove</button>
                </div>
                <button type="button" class="mt-2 bg-primary-500 text-white px-4 py-2 rounded-md shadow-sm hover:bg-primary-600">Add Ingredient</button>
            </div>
        </div>

        <!-- Instructions Section -->
        <div class="mb-4">
            @Html.LabelFor(model => model.Instructions, "Instructions", new { @class = "block text-sm font-medium text-gray-700" })
            @Html.TextAreaFor(model => model.Instructions, 4, 50, new { @class = "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200", placeholder = "Enter recipe instructions" })
            @Html.ValidationMessageFor(model => model.Instructions, "", new { @class = "text-red-500 text-sm" })
        </div>

        <!-- Recipe Image Upload -->
        <div class="mb-4">
            @Html.Label("Recipe Image", new { @class = "block text-sm font-medium text-gray-700" })
            <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md bg-gray-50">
                <div class="space-y-1 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 22v-6a6 6 0 0112 0v6m-6 4v14m-6-4h12"></path>
                    </svg>
                    <div class="flex text-sm text-gray-600">
                        <label for="ImageUrl" class="relative cursor-pointer bg-white rounded-md font-medium text-primary-500 hover:text-primary-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-primary-500">
                            <span>Upload a file</span>
                            @Html.TextBoxFor(model => model.ImageUrl, new { type = "file", @class = "sr-only" })
                        </label>
                        <p class="pl-1">or drag and drop</p>
                    </div>
                    <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="text-right">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-500 hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Save Recipe
            </button>
        </div>
    }
</section>