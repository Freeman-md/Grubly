@using Microsoft.AspNetCore.Identity
@using Grubly.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class=hover:text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="hover:text-primary">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="hover:text-primary" id="register" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li>
        <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
